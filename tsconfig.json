{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "sourceMap": false,
        "jsx": "react",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "module": "es2020",
        "target": "es5",
        "baseUrl": "./src",
        "importHelpers": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "declaration": false,
        "lib": ["dom", "es2017"],
        "moduleResolution": "node",
        "typeRoots": ["src/types/**/*.d.ts", "node_modules/@types"]
    }
}
